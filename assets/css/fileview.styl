@require './scrollbar.styl'

.fileview
    position: relative

  pre
    background: transparent

  code
    width: 100%
    background: transparent
    border: none
    box-shadow: none
    color: white
    &::before
      content: ''

  .fileview-icon
    min-width: 32px

  .fileview-content 
    position: absolute
    top: 0
    left: 0
    right: 0
    bottom: 0
    padding: 1em
    overflow: auto
    scrollbar()
